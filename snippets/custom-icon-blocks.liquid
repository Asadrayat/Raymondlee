<style>
.custom-icon-blocks--container::-webkit-scrollbar {
  display: none;
}
    .custom-icon-blocks--container {
    display: flex;
    width: 100%;
    display: flex;
    padding-bottom: var(--Other-Gap-9, 16px);
    justify-content: space-between;
    align-items: flex-start;
    align-self: stretch;
    border-bottom: 1px solid var(--Color-Gray-200, #E7E5E4);
    @media(max-width: 1100px){
        flex-direction: row;
        flex-wrap: nowrap;
        overflow-y: auto;
        gap: 24px;
    }

 img {
    width: 40px;
    height: 40px;
}
.custom-icon-blocks--wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: var(--Other-Gap-9, 16px);
    min-width: max-content;
    @media(max-width: 768px){
        min-width: 160px;
    }
}
.text--wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--Other-Gap-3, 4px);
}
p.custom-icon--title {
    color: var(--Color-Dark-500, #0B0404);
    font-family: Lato;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    margin: 0;
}
p.custom-icon--subtitle {
    color: var(--Color-Gray-500, #78716C);
    font-family: Lato;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
    margin: 0;
}
    
}
</style>

<div class="custom-icon-blocks--container">
    <div class="custom-icon-blocks--wrapper">
        <div class="img-wrapper">
            {% if block.settings.icon_1 != null %}
                {{
                block.settings.icon_1
                | image_url: width: block.settings.icon_1.width
                | image_tag: class: 'custom-icon'
                }}
            {% endif %}
        </div>
        <div class="text--wrapper">
            <p class="custom-icon--title">{{ block.settings.title_1 }}</p>
            <p class="custom-icon--subtitle">{{ block.settings.subtitle_1 }}</p>
        </div>
    </div>
    <div class="custom-icon-blocks--wrapper">
        <div class="img-wrapper">
            {% if block.settings.icon_2 != null %}
                {{
                block.settings.icon_2
                | image_url: width: block.settings.icon_2.width
                | image_tag: class: 'custom-icon'
                }}
            {% endif %}
        </div>
        <div class="text--wrapper">
            <p class="custom-icon--title">{{ block.settings.title_2 }}</p>
            <p class="custom-icon--subtitle">{{ block.settings.subtitle_2 }}</p>
        </div>
    </div>
    <div class="custom-icon-blocks--wrapper">
        <div class="img-wrapper">
            {% if block.settings.icon_3 != null %}
                {{
                block.settings.icon_3
                | image_url: width: block.settings.icon_3.width
                | image_tag: class: 'custom-icon'
                }}
            {% endif %}
        </div>
        <div class="text--wrapper">
            <p class="custom-icon--title">{{ block.settings.title_3 }}</p>
            <p class="custom-icon--subtitle">{{ block.settings.subtitle_3 }}</p>
        </div>
    </div>
</div>