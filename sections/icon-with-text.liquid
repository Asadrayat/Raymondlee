{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: #AA7248;
    .badge__img {
        width: 100%;
        max-width: max-content;
        height: auto;
        object-fit: cover;    
        @media(width < 768px) {
        }
    }    
  }
  .wrapper-{{ id }}  .swiper-wrapper{
    transition-timing-function: linear !important;
  }

  .wrapper-{{ id }} .content__wrapper {
    color: #fff;
    font-style: normal;
    font-weight: 400;
    width: max-content;
    display: flex;
    gap: 12px;
    align-items: center;
        justify-content: center;
    margin-inline: auto;
  }
  .wrapper-{{ id }} p{
    font-size: 14px;
    font-weight: 400;    
    strong {
        font-size: 24px;
        line-height: 140%;
        display: block;    
        margin: 0 0 4px;
    }        
  }
  .wrapper-{{ id }} .swiper-slide{
    display: flex;
    justify-content: start;
  }
  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  .wrapper-{{ id }} .swiper-slide{
    justify-content: center;
  }    
  }

  .sec-{{ id }}{
 .content--container {
      display: grid;
      grid-template-columns: repeat(4, minmax(0,1fr));
      gap: 64px;
      @media(max-width: 1100px) {
        grid-template-columns: repeat(2, minmax(0,1fr));
        gap: 0;
        row-gap: 32px;
      }
      @media(max-width: 600px) {
        grid-template-columns: minmax(0,1fr);
        gap: 32px;
      }
    } 
  }
</style>


<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h2 class="--section-title">{{ section.settings.heading }}</h2>
    <div class="wrapper-{{ id }}">
      <div class="badges-{{ id }}">
        <div class="content--container">
          {% for block in section.blocks %}
            <div class="content--box">
              <div class="content__wrapper">
                {% if block.settings.badge != blank %}
                  <div class="badge__img">
                    {{ block.settings.badge | image_url: width: 32 | image_tag }}
                  </div>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p>{{ block.settings.text }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


{% comment %} <div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h2 class="--section-title">{{ section.settings.heading }}</h2>
    <div class="wrapper-{{ id }}">
      <div class="swiper badges-{{ id }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="content__wrapper">
                {% if block.settings.badge != blank %}
                  <div class="badge__img">
                    {{ block.settings.badge | image_url: width: 32 | image_tag }}
                  </div>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p>{{ block.settings.text }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div> {% endcomment %}

{% comment %} <script>
  document.addEventListener('DOMContentLoaded', () => {
    const swiperOptions = {
      slidesPerView: 1.2,
      spaceBetween: 12,
      breakpoints: {
        500: {
          slidesPerView: 1.8,
          spaceBetween: 12,
        },
        850: {
          slidesPerView: 2.6,
          spaceBetween: 12,
        },
        969: {
          slidesPerView: 3.2,
          spaceBetween: 12,
        },
        1200: {
          slidesPerView: 4,
          spaceBetween: 32,
        },
      },
    };

    // Conditionally add autoplay if screen width < 600
    if (screen.width < 600) {
      swiperOptions.loop = true;
      swiperOptions.speed = 5000;
      swiperOptions.autoplay = {
        delay: 0,
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      };
    }

    new Swiper('.badges-{{ id }}.swiper', swiperOptions);
  });
</script> {% endcomment %}

